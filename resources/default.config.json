{
    "controls": {
        "keyboard": {
            "devices": {
                "Keyboard": {
                    "contexts": {
                        "flightsim": {
                            "W": {
                                "momentaryValue": -0.5,
                                "slot": "pitch"
                            },
                            "S": {
                                "momentaryValue": 0.5,
                                "slot": "pitch"
                            },
                            "A": {
                                "momentaryValue": 0.5,
                                "slot": "heading"
                            },
                            "D": {
                                "momentaryValue": -0.5,
                                "slot": "heading"
                            },
                            "Q": {
                                "momentaryValue": -0.5,
                                "slot": "roll"
                            },
                            "E": {
                                "momentaryValue": 0.5,
                                "slot": "roll"
                            },

                            "End": {
                                "valueToSet": 0,
                                "slot": "throttle"
                            },
                            "Home": {
                                "valueToSet": 1,
                                "slot": "throttle"
                            },
                            "PageDown": {
                                "changeRate": -0.3,
                                "slot": "throttle"
                            },
                            "PageUp": {
                                "changeRate": 0.3,
                                "slot": "throttle"
                            },

                            "Escape": {
                                "slot": "openGameMenu"
                            },
                            "F1": {
                                "slot": "grabMouse",
                                "toggle": true
                            },
                            "F10": {
                                "slot": "quit"
                            }
                        }
                    }
                }
            }
        },
        "mouse": {
            "devices": {
                "Dumb Mouse": {
                    "contexts": {
                        "flightsim": {
                            "Left": {
                                "changeRate": 0.3,
                                "slot": "throttle"
                            },
                            "Right": {
                                "changeRate": -0.3,
                                "slot": "throttle"
                            },
                            "Wheel X": {
                                "delta": true,
                                "sensitivity": 10,
                                "slot": "cameraZoom"
                            },
                            "X": {
                                "sensitivity": -10,
                                "slot": "heading"
                            },
                            "Y": {
                                "sensitivity": 10,
                                "slot": "pitch"
                            }
                        }
                    }
                }
            }
        }
    }
}
